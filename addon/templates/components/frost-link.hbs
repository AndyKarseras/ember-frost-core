{{#if design}}
  <div class='content '>
    <div class=' text'>
      <div class='svg'>{{frost-icon icon=icon}}</div>
      {{yield}}
      </div>
  </div>
{{else if priority}}
  {{#if (eq priority 'primary')}}
    <div class='content text'>
      {{yield}}
        <div class='svg'>{{frost-icon icon='frost/new-tab'}}</div>
    </div>
  {{else if (eq priority 'secondary')}}
    <div class='content'>
      <div class='text'>
        {{yield}}
      </div>
    </div>
  {{else if (eq priority 'tertiary')}}
    <div class='content text'>
      {{yield}}
    </div>
  {{/if}}
{{else}}
  {{yield}}
{{/if}}
